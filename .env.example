# Finnhub API Configuration
FINNHUB_API_KEY=your_finnhub_api_key_here

# Database Configuration (optional)
DATABASE_PATH=market_trends.db
DATABASE_CLEANUP_DAYS=30

# API Configuration
API_RATE_LIMIT=60
API_CACHE_TTL=300

# Alert Thresholds (optional)
ALERT_MOMENTUM_SURGE=5.0
ALERT_MOMENTUM_DROP=-5.0
ALERT_VOLUME_SPIKE=2.0

# Dashboard Configuration
AUTO_REFRESH_DEFAULT=true
REFRESH_INTERVAL_DEFAULT=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=trend_analyzer.log

# Environment
ENVIRONMENT=production